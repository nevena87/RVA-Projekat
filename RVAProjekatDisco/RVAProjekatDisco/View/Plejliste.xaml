<Window x:Class="RVAProjekatDisco.View.Plejliste"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RVAProjekatDisco.View"
        mc:Ignorable="d"
        Title="" Height="328" Width="580" ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowFrameBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="CadetBlue" Offset="0.4"/>
            <GradientStop Color="Gray" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Border Background="#50FFFFFF" CornerRadius="5" BorderBrush="{StaticResource WindowFrameBrush}" BorderThickness="3,0,3,3">
        <Grid>
            <Button x:Name="NazadDugme" Content="Nazad" HorizontalAlignment="Left" VerticalAlignment="Top" Width="68" Height="20" Command="{Binding OtkaziKomanda}" />

            <TextBox x:Name="TekstZaPretraguComboBox" HorizontalAlignment="Left" Height="25" Margin="85,20,0,0" 
                 VerticalAlignment="Top" Width="219" Text="{Binding KriterijumPretrageTekst}"/>
            <ComboBox x:Name="KriterijumComboBox" HorizontalAlignment="Left" Height="25" Margin="318,20,0,0" Text="" VerticalAlignment="Top" Width="141"
                  ItemsSource="{Binding TipoviPretrage}" SelectedItem="{Binding TipoviPretrageEnum}"/>
            <Button x:Name="PretraziPlejlistuDugme" Content="Pretrazi plejliste" HorizontalAlignment="Left" Margin="475,20,0,0" 
                VerticalAlignment="Top" Width="99" Height="25" Command="{Binding PretraziPlejlistuKomanda}"/>

            <Rectangle HorizontalAlignment="Stretch" Fill="Gray" Height="1" Margin="-10,60,10,389"/>

            <DataGrid x:Name="dgridPlejliste" HorizontalAlignment="Left" Margin="0,135,0,0" VerticalAlignment="Top" Height="190" Width="574"
                  ItemsSource="{Binding Plejliste}" AutoGenerateColumns="false" IsReadOnly="True" SelectedItem="{Binding SelektovanaPlejlista}" HorizontalContentAlignment="Center">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=IdPlejliste}" Header="Id Plejliste" />
                    <DataGridTextColumn Binding="{Binding Path=Naziv}" Header="Naziv Plejliste" Width="*"/>
                    <DataGridTextColumn Binding="{Binding Path=Autor}" Header="Autor Plejliste" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="DodajPlejlistuDugme" Content="Dodaj plejlistu" HorizontalAlignment="Left" Margin="122,66,0,0" VerticalAlignment="Top" Width="105" Height="34" Command="{Binding DodajPlejlistuKomanda}"/>
            <Button x:Name="IzmeniPlejlistuDugme" Content="Izmeni plejlistu" HorizontalAlignment="Left" Margin="241,66,0,0" VerticalAlignment="Top" Width="105" Height="34" Command="{Binding IzmeniPlejlistuKomanda}"/>
            <Button x:Name="ObrisiPlejlistuDugme" Content="Obrisi plejlistu" HorizontalAlignment="Left" Margin="357,65,0,0" VerticalAlignment="Top" Width="105" Height="34" Command="{Binding ObrisiPlejlistuKomanda}"/>
            <Button x:Name="KlonirajPlejlistuDugme" Content="Kloniraj plejlistu" HorizontalAlignment="Left" Margin="475,65,0,0" VerticalAlignment="Top" Width="99" Height="34" Command="{Binding KlonirajPlejlistuKomanda}"/>

            <Label Content="Izaberite opciju" FontSize="15" HorizontalAlignment="Left" Margin="0,66,0,0" VerticalAlignment="Top" Width="114" Height="29"/>

        </Grid>
    </Border>
</Window>
